# Кодировка
AddDefaultCharset utf-8

# Запрет на просмотр директорий
Options All -Indexes

# Удаление у всех .html-файлов расширения из адреса
RewriteEngine on
RewriteBase /
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^.]+)\.html\ HTTP
RewriteRule ^([^.]+)\.html$ /$1 [R=301,L]
RewriteCond %{REQUEST_URI} !(\.[^./]+)$
RewriteCond %{REQUEST_fileNAME} !-d
RewriteCond %{REQUEST_fileNAME} !-f
RewriteRule (.*) /$1.html [L]

# Удаление www из адреса
RewriteEngine on
RewriteCond %{HTTP_HOST} ^www\.
RewriteCond %{HTTPS}s ^on(s)|off
RewriteCond http%1://%{HTTP_HOST} ^(https?://)(www\.)?(.+)$
RewriteRule ^ %1%3%{REQUEST_URI} [R=301,L]

# Обработка ошибок
ErrorDocument 404 /404.html
ErrorDocument 403 /404.html

# Content Security Policy
<IfModule mod_headers.c>
Header set Strict-Transport-Security 'max-age=31536000; includeSubDomains; preload' env=HTTPS

Header set Content-Security-Policy "default-src 'self'; \
 child-src 'self' https://chatovod.ru https://thenyan.chatovod.ru https://www.youtube-nocookie.com https://player.twitch.tv https://goodgame.ru; \
 frame-ancestors 'self'; \
 style-src 'self' 'unsafe-inline' data: https://cdn.blyat.science https://fonts.googleapis.com; \
 script-src 'self' 'unsafe-inline' https://cdn.blyat.science; \
 img-src 'self' data: https://cdn.blyat.science https://images.weserv.nl; \
 media-src 'self' blob:; \
 font-src 'self' https://fonts.gstatic.com; \
 connect-src 'self' https://nyan-api.blyat.science https://aw-api.blyat.science https://mc.yandex.ru"
</IfModule>
